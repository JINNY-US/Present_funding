<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarketActivity">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/mypage_toolbar"
      android:layout_width="414dp"
      android:layout_height="55dp"
      android:background="@color/main_orange"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      android:visibility="visible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="   마켓 페이지"
      app:titleTextColor="#FFFFFF"
      tools:menu="@menu/actionbar_actions" />


  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="409dp"
      android:layout_height="694dp"
      android:layout_marginTop="100dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_shearch" />

  <EditText
      android:id="@+id/txt_shearch"
      android:layout_width="360dp"
      android:layout_height="50dp"
      android:ems="10"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toStartOf="@+id/btn_shearch"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/mypage_toolbar"
      tools:ignore="SpeakableTextPresentCheck" />

  <ImageButton
      android:id="@+id/btn_shearch"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="361dp"
      android:background="#00FFFFFF"
      android:src="@android:drawable/ic_menu_search"
      app:layout_constraintBottom_toBottomOf="@+id/txt_shearch"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/recyclerView"
      app:layout_constraintTop_toTopOf="@+id/txt_shearch"
      tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>