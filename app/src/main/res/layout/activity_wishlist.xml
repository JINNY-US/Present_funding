<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wish_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.fragment_shop_list">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mypage_toolbar"
            android:layout_width="414dp"
            android:layout_height="55dp"
            android:background="@color/main_orange"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="   위시리스트"
            app:titleTextColor="#FFFFFF"
            tools:menu="@menu/actionbar_actions" />

        <LinearLayout
            android:layout_width="406dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="가지고 싶은 물건을 담아보세요!"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="578dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/wishlist1"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wish_img1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/gift" />

                        <TextView
                            android:id="@+id/wish_text1"
                            android:layout_width="161dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="25dp"
                            android:gravity="center"
                            android:text="TextView1" />

                        <ImageView
                            android:id="@+id/heart1"
                            android:layout_width="39dp"
                            android:layout_height="29dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/wish_c" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wishlist2"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/wish_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/gift" />

                        <TextView
                            android:id="@+id/wish_text2"
                            android:layout_width="161dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="25dp"
                            android:gravity="center"
                            android:text="TextView2" />

                        <ImageView
                            android:id="@+id/heart2"
                            android:layout_width="39dp"
                            android:layout_height="29dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/wish_c" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wishlist3"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wish_img3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/gift" />

                        <TextView
                            android:id="@+id/wish_text3"
                            android:layout_width="161dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="25dp"
                            android:gravity="center"
                            android:text="TextView3" />

                        <ImageView
                            android:id="@+id/heart3"
                            android:layout_width="39dp"
                            android:layout_height="29dp"
                            android:layout_marginTop="10dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/wish_c" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>