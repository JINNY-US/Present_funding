<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".activity_mypage">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"></LinearLayout>

  <TextView
      android:id="@+id/id_txt"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginTop="100dp"
      android:autoText="false"
      android:text="TextView"
      android:textAlignment="center"
      android:textSize="34sp"
      app:layout_constraintBottom_toTopOf="@+id/wish"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/gift"
      android:layout_width="40dp"
      android:layout_height="50dp"
      android:layout_marginStart="42dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="63dp"
      android:layout_marginBottom="586dp"
      android:src="@drawable/gift"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/wish"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/id_txt"
      app:layout_constraintVertical_bias="0.0" />

  <ImageView
      android:id="@+id/wish"
      android:layout_width="40dp"
      android:layout_height="50dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="226dp"
      android:layout_marginBottom="623dp"
      android:src="@drawable/wish"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/gift"
      app:layout_constraintTop_toBottomOf="@+id/id_txt" />

  <TextView
      android:id="@+id/gift_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="38dp"
      android:layout_marginTop="3dp"
      android:layout_marginEnd="15dp"
      android:layout_marginBottom="539dp"
      android:text="펀딩샵"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/wish_txt"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/gift"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/wish_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="3dp"
      android:layout_marginEnd="217dp"
      android:layout_marginBottom="539dp"
      android:text="위시리스트"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/gift_txt"
      app:layout_constraintTop_toBottomOf="@+id/wish" />

  <ScrollView
      android:id="@+id/wish_Scroll"
      android:layout_width="400dp"
      android:layout_height="477dp"
      android:layout_marginStart="4dp"
      android:layout_marginBottom="7dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/gift_txt"
      app:layout_constraintVertical_bias="1.0">

    <LinearLayout
        android:id="@+id/funding_ing_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:id="@+id/funding_ing_1"
          android:layout_width="410dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/funding_ing1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fui_ic_check_circle_black_128dp" />

        <TextView
            android:id="@+id/funding_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/funding_ing_2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/funding_ing2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fui_ic_check_circle_black_128dp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/funding_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/funding_ing_3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/funding_ing3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fui_ic_check_circle_black_128dp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/funding_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp" />
      </LinearLayout>

    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>